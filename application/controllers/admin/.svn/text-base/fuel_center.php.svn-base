<?phpclass Fuel_center extends Admin_Controller{        function __construct()    {        parent::__construct();		$this->load->library('form_validation');				$this->load->helper(array('form','url','codegen_helper'));		$this->load->model('fuel_center_model');	}		    /*************************Start Function index()***********************************/    //Owner : Madhuranga Senadheera    //    //@ type :    //#return type :	function index()	{        // $this->load->model('fuel_center_model');        $this->load->library('table');        $this->load->library('pagination');        //paging        $config['base_url'] = site_url('admin/fuel_center/index');        $config['total_rows'] = $this->fuel_center_model->count();        $config['per_page'] = 10;	        $this->pagination->initialize($config); 	        // make sure to put the primarykey first when selecting ,         //eg. 'userID,name as Name , lastname as Last_Name' , Name and Last_Name will be use as table header.        // Last_Name will be converted into Last Name using humanize() function, under inflector helper of the CI core.        $this->data['results'] = $this->fuel_center_model->get_with_join('fuel_center_id,fuel_center.name,town.name AS town_name,fuel_center.lat,fuel_center.lon', NULL, FALSE,$config['per_page'],$this->uri->segment(4));        $this->data['meta_title'] = $this->data['meta_title'].' - Fuel center list';        $this->data['sub_view'] = 'admin/fuel_center_list';        $this->load->view('admin/_layout_main',$this->data); 	}//Function End get()---------------------------------------------------FUNEND()     /*************************Start Function add()***********************************/    //Owner : Madhuranga Senadheera    //    //@ type :    //#return type :    function add()    {            // load form vadaiton        $this->load->library('form_validation');    		$this->data['custom_error'] = '';        $this->form_validation->set_rules($this->fuel_center_model->rules);        // validate form        if ($this->form_validation->run() == false)        {             $this->data['custom_error'] = (validation_errors() ? '<div class="form_error">'.validation_errors().'</div>' : false);             $this->data['result'] = array();        }        else        {                           // get form data                    $data = $this->post_get_as_array(array('town_id' ,'name' ,'lat' ,'lon' ,'d_reject' ,'note'));                       // data save            if ($this->fuel_center_model->save($data) == TRUE)            {                //$this->data['custom_error'] = '<div class="form_ok"><p>Added</p></div>';                // or redirect                redirect(site_url('admin/fuel_center/index/?msg_success=Successfully details updated'));            }            else            {                $this->data['custom_error'] = '<div class="form_error"><p>An Error Occured.</p></div>';			}        }        $this->data['meta_title'] = $this->data['meta_title'].' - Add a Fuel center ';        $this->data['sub_view'] = 'admin/fuel_center_add';        $this->load->view('admin/_layout_modal',$this->data);     }//Function End add()---------------------------------------------------FUNEND()        /*************************Start Function edit()***********************************/    //Owner : Madhuranga Senadheera    //    //@ type :    //#return type :    function edit($id1)    {           $ID = $id1;        // load form valition        $this->load->library('form_validation');            $this->data['custom_error'] = '';        // validate form        $this->form_validation->set_rules($this->fuel_center_model->rules);        if ($this->form_validation->run() == false)        {            // set error massage             $this->data['custom_error'] = (validation_errors() ? '<div class="form_error">'.validation_errors().'</div>' : false);             // $this->data['result'];        }        else        {                 // get form data                    $data = $this->post_get_as_array(array('town_id' ,'name' ,'lat' ,'lon' ,'d_reject' ,'note'));                        // data save                                  if ($this->fuel_center_model->save($data, $this->input->post('fuel_center_id')) == TRUE)            {                redirect(site_url('admin/fuel_center/index/?msg_success=Successfully details updated'));            }            else            {                $this->data['custom_error'] = '<div class="form_error"><p>An Error Occured</p></div>';            }        }        // load individula view        $this->data['result'] = $this->fuel_center_model->get_with_join('town.town_id,fuel_center_id,fuel_center.name,town.name AS town_name,fuel_center.lat,fuel_center.lon,d_reject,note', $ID,TRUE,1,0);        $this->data['meta_title'] = $this->data['meta_title'].' - Edit Fuel center';         $this->data['sub_view'] = 'admin/fuel_center_edit';        // load view        $this->load->view('admin/_layout_modal',$this->data);    }//Function End edit()---------------------------------------------------FUNEND()        /*************************Start Function view()***********************************/    //Owner : Madhuranga Senadheera    // View individual     //@ type :    //#return type :    function view($id1)    {        // $ID =  $this->uri->segment(3);        $ID = $id1;        //  get data        $this->data['result'] = $this->fuel_center_model->get_with_join('town.town_id,fuel_center_id,fuel_center.name,town.name AS town_name,fuel_center.lat,fuel_center.lon,d_reject,note', $ID,TRUE,1,0);                $this->data['sub_view'] = 'admin/fuel_center_view';        // load view        $this->load->view('admin/_layout_modal',$this->data);    }	    /**     * @author                             Madhuranga Senadheera     * Purpose of the function          Delete items then redirect to list     *      */    function delete($id)    {          //     data not remove                               redirect(site_url('admin/fuel_center/index/?msg_error=Access Deny'));     }    /*--------------------------End of delete()---------------------------*/           /**     * @author                          Madhuranga Senadheera     * Purpose of the function          list  fuel center      * @return_type                     json     */    public function ajax_get_by_town_id()    {        $json_return_array = array();        // load form valition        $this->load->library('form_validation');            $this->data['custom_error'] = '';        // validate form        $this->form_validation->set_rules('town_id', 'Town name', 'trim|required|max_length[12]|xss_clean');        if ($this->form_validation->run()==false)        {                        // validation error            $json_return_array['msg']       = 'Operation fail';            $json_return_array['status']    = 'error';            $json_return_array['statuss']    = validation_errors();            $json_return_array['error_code']= 'validation_faile';                    }        else        {             // get form data            $data = $this->post_get_as_array(array('town_id'));             // get data            $return = $this->fuel_center_model->get_by(array('town_id'=>$data['town_id']), array('lat as fuel_center_lat,lon as fuel_center_lon,fuel_center.name as fuel_center_name'), $id = NULL, $single = FALSE, $perpage=20, $start=0, $array='array');            if (count($return))            {                  $json_return_array['fuel_centers'] = $return;                $json_return_array['msg']           = 'Data ok';                $json_return_array['status']        = 'success';                 $json_return_array['success_status']= 'system_update_success';             }            else            {                // data not save in db                 $json_return_array['msg']       = 'No data';                $json_return_array['status']    = 'error';                $json_return_array['error_code']= 'system_update_unsuccessfull';             }        }        // return the massage        echo(json_encode($json_return_array));        exit();             }    /*---------------- ---------End of ajax_get_by_town_id()---------------------------*/     }/* End of file fuel_center.php *//* Location: ./system/application/controllers/fuel_center.php */